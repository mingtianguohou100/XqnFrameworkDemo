<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeViewModel"
            type="com.mwa.xqnframeworkdemo.viewmodel.HomeViewHolder" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_get_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{homeViewModel.loading ? false : true}"
            android:onClick="@{() -> homeViewModel.requestHomeData()}"
            android:text="获取数据" />

        <TextView
            android:id="@+id/tv_show_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{homeViewModel.mJson}" />
    </LinearLayout>


</layout>